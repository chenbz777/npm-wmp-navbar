/* components/NavBar/index.wxss */
.c-row-center {
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-align-items: center;
    align-items: center;
    flex-wrap: wrap;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

.c-row-y-center {
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    flex-wrap: wrap;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

.flex-1 {
    flex: 1;
}

.navbar {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    z-index: 9999;
}

.navbar--position {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    z-index: 9999;
}

.navbar__body__title {
    flex: 1;
    padding: 0 5px;
    font-weight: 500;
    font-size: 18px;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.navbar__body__left {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-around;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    border: 1px solid #e3e6eb;
    background-color: rgba(255, 255, 255, 0.8);
}

.navbar__body__left-container--one {
    box-sizing: border-box;
    border: 1px solid #e3e6eb;
    background-color: rgba(255, 255, 255, 0.8);
    padding-right: 8px;
    height: 100%;
}

.navbar__body__left--one {
    display: block;
    box-sizing: border-box;
    border-radius: 100%;
    height: 100%;
}

.navbar__body__left__divider {
    color: #e3e6eb;
    border-color: #e3e6eb;
}

.navbar__body__left__icon {
    display: block;
    height: 100%;
    box-sizing: border-box;
}