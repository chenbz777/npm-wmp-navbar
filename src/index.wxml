<view class="navbar {{position ? 'navbar--position' : 'navbar'}}" style="background-color: {{bgColor}};">
    <view style="width: 100%; height: {{statusBarHeight}}px;"></view>
    <view style="padding: {{navBarYPadding}}px {{navBarXPadding}}px; height: {{navBarHeight}}px;" class="c-row-y-center navbar__body">

        <slot wx:if="{{showSlot}}"></slot>

        <view style="width: {{rightCapsuleWidth}}px; border-radius: {{navBarHeight / 2}}px; height: 100%;" class="c-row-y-center" wx:if="{{!showSlot}}">
            <view class="navbar__body__left-container--one c-row-y-center" style="border-radius: {{navBarHeight / 2}}px;" wx:if="{{showGoBack && (!showHome)}}" bindtap="goBack">
                <image src="./icon/left.svg" mode="heightFix" style="padding: {{navBarYPadding - 3}}px {{navBarYPadding}}px;" class="navbar__body__left--one"></image>
                <text style="margin-left: -3px;">返回</text>
            </view>


            <view style="border-radius: {{navBarHeight / 2}}px;" class="navbar__body__left" wx:if="{{showGoBack && showHome}}">
                <image src="./icon/left.svg" mode="heightFix" style="padding: {{navBarYPadding - 3}}px {{navBarYPadding}}px; margin-left: 5px;" class="navbar__body__left__icon" bindtap="goBack"></image>
                <view class="c-row-center navbar__body__left__divider" style="margin-left: -3px;">
                    |
                </view>
                <image src="./icon/home.svg" mode="heightFix" style="padding: {{navBarYPadding - 3}}px {{navBarYPadding}}px; margin-right: 5px;" class="navbar__body__left__icon" bindtap="goHome"></image>
            </view>
        </view>

        <view class="navbar__body__title" style="color: {{titleColor}};" wx:if="{{!showSlot}}" bindtap="backTop">
            {{title}}
        </view>

        <view style="width: {{rightCapsuleWidth}}px;"></view>
    </view>
</view>